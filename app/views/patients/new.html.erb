<!-- Begin Page 1 -->
<div data-role="page" id="form" data-url="form" tabindex="0" style="min-height: 658px;">

  <% content_for :header_title, 'How many patients did you help today?' %>
  <%= render 'layouts/header' %>
  <%= render 'layouts/flash_messages' %>

  <% if !current_user %>
    <div class="wrap_section_narrow_top must_sign_in">
      <div class="row">
        <p>
          You must
          <%= link_to 'sign in', new_user_session_path, data: {transition: 'flip'} %>
          to count your encounters.
        </p>
      </div>
    </div>
    <div class="wrap_section_narrow">
      <div class="spacer">
        <%= mail_to 'the.encounter.counter@gmail.com', 'Contact', body: "If you are having difficult using this app, or would like to contact the creator of this app, please add your message below." %>
      </div>
    </div>
  <% else %>
    <div class="wrap_section_narrow">
      <div class="spacer">
        <%= date_field_tag(:date, Time.zone.today, onchange: "setEncounteredOn()") %>
      </div>
    </div>

    <div class="wrap_section_narrow">

      <% parent_types = %w(Adult Adult Pediatric Pediatric Pediatric Continuity Continuity) %>
      <% encounter_types = ["Inpatient & ED", "ICU", "Inpatient", "Newborn", "ED", "Inpatient", "External"] %>
      <% form_input_labels = [
        "adult_inpatient_and_ed", "adult_icu", "pediatric_inpatient", "pediatric_newborn",
        "pediatric_ed", "continuity_inpatient", "continuity_external"] %>
      <%= render partial: 'encounter_types',
        locals: {parent_types: parent_types, encounter_types: encounter_types, form_input_labels: form_input_labels} %>

      <div class="form-block">
        <%= render 'form' %>
      </div>
    </div>
    <div class="wrap_section_narrow" style="background-color: none">
      <div id="buttonsLine"class="row">
        <%= submit_tag('Reset', class: 'resetBtnMid blockFloat', onclick: "resetEncounters()") %>
        <div id="totalPatientsBlock">
          <div id="total" class="totalnumber blockFloat">0</div>
        </div>
      </div>
    </div>
  <div class="spacer">
  </div>
  <div class="wrap_section_narrow_wc" style="background-color: none">
    <div class="spacer">
      <%= render 'layouts/nav' %>
    </div>
  </div>
  <% end %>
  <%= render 'layouts/footer' %>
</div>
<!-- End Page 1 -->
