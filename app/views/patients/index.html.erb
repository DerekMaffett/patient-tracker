<!-- Begin Page 1 -->
<div data-role="page" id="index" data-url="index" tabindex="0">

  <% content_for :header_title, 'Patient Encounters' %>
  <%= render 'layouts/header' %>
  <%= render 'layouts/flash_messages' %>

  <div class="wrap_section_narrow_wc" style="background-color: none">
    <div class="spacer">
      <%= render 'layouts/nav' %>
    </div>
  </div>

  <div class="wrap_section_narrow">
    <% if current_user %>
      <table data-role="table" id="patient_encounters_table" class="ui-responsive">
        <thead>
          <tr class="fullwidth">
            <th>Resident</th>
            <th>Type</th>
            <th>Encountered</th>
            <th>Submitted</th>
          </tr>
        </thead>

        <tbody>
          <% @patients.each do |patient| %>
            <% if policy(patient).index? %>
              <tr class="lineitem fullwidth">
                <td><%= patient.user.present? ? patient.user.name : "Unknown" %></th>
                <td><%= patient.encounter_type %></td>
                <td><%= patient.encountered_on %></td>
                <td><%= patient.created_at.to_date %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="spacer">You must <%= link_to 'sign in', new_user_session_path %> to view this page.</div>
    <% end %>
  </div>

  <div class="form-block">
  </div>
  <div class="spacer2">
  </div>
  <%= render 'layouts/footer' %>
</div>
<!-- End Page 1 -->
