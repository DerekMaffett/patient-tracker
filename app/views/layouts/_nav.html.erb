  <% if controller_name == 'patients' && action_name == 'index' && policy(@patients).create? %>
    <%= link_to 'Add Encounters', new_patient_path %> |
  <% else %>
    <%= link_to 'All Encounters', patients_path %> |
  <% end %>
  <%= link_to 'Sign Out', destroy_user_session_path(user_session), method: "delete" %>
<% end %> |
