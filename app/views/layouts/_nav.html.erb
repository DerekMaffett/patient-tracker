<ul class="button-group ">
<% if current_user %>
  <% if controller_name == 'encounters' && action_name == 'index' && policy(@encounters).create? %>

  <li class="tiny button secondary"><%= link_to 'Add Encounters', new_encounter_path %> </li>
  <% else %>
        <li class="tiny button secondary"><%= link_to 'All Encounters', encounters_path %></li>
  <% end %>
  <% if controller_name == 'encounters' && action_name == 'summary' %>
        <li class="tiny button secondary"> <%= link_to 'Download as Excel', UserMailer.send_summary(@user).deliver%> </li>

  <% else %>
            <li class="tiny button secondary"> <%= link_to 'Download Summary', summary_path(format: 'xls'), data: {ajax: false} %></li>
            <li class="tiny button secondary">   <%= link_to 'Email Summary', summary_path %></li>
  <% end %>
    <li class="tiny button secondary"><%= link_to 'Sign Out', destroy_user_session_path(user_session), method: "delete" %> </li>

    <% end %> </ul>







