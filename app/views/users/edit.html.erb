<div data-role="page">
  <% content_for :header_title, 'Your Account' %>
  <%= render 'layouts/header' %>
  <%= render 'layouts/flash_messages' %>

  <h1><%= @user.name %></h1>

  <% if current_user == @user %>
    <%= render 'form' %>
    <div>
      You are editing your profile information. Submit if you would like to change your name.
    </div>
  <% else %>
    You do not have permission to edit another user's profile!
  <% end %>

  <br />
  <%= link_to 'Show', @user %> |
  <%= link_to 'Back', users_path %>

  <%= render 'layouts/footer' %>
</div>

