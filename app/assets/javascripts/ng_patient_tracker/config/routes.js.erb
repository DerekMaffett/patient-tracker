(function() {
  var app = angular.module('CounterApp');

  app.config(['$routeProvider', function($routeProvider) {
    $routeProvider
      .when('/encounters', {
        controller: 'EncountersCtrl',
        templateUrl: '<%= asset_path("ng_patient_tracker/app/encounters/views/encounters.html") %>'
      })
      .when('/profile', {
        controller: 'ProfileCtrl',
        templateUrl: '<%= asset_path("ng_patient_tracker/app/profile/views/profile.html") %>'
      })
      .otherwise({
        redirectTo: '/encounters'
      });
  }]);
})();
