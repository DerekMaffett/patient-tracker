(function() {
  var app = angular.module('LayoutDirectives', []);

  app.directive('pageHeader', function() {
    return {
      restrict: 'A',
      templateUrl: '<%= asset_path("ng_patient_tracker/app/layouts/views/header.html") %>',
      scope: { title: '@title' }
    };
  });

  app.directive('pageNav', function() {
    return {
      restrict: 'A',
      templateUrl: '<%= asset_path("ng_patient_tracker/app/layouts/views/nav.html") %>'
    };
  });

  app.directive('pageFooter', function() {
    return {
      restrict: 'A',
      templateUrl: '<%= asset_path("ng_patient_tracker/app/layouts/views/footer.html") %>',
      controller: 'FooterCtrl'
    };
  });
})();
